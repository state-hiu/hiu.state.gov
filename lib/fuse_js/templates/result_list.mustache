<div>
  <!--<ul style="margin-left: 0px; margin-right: 0px; padding-left: 0px;">-->
    {{#results}}
      <div class="item listitem row" title="{{title}}" style="margin-bottom: 15px;">
        <div class="col-md-2">
              <span class="helper">
              <a class="listitem-thumbnail" data-toggle="modal" data-target="#myModal" data-title="{{title}}" data-img="{{product_jpg}}" style="max-width: 150px; max-height: 150px;">
              </span><img src="{{thumbnail_300}}" width="150px" height="150px" style="border:1px solid #021a40;" class="img-responsive"/>
                <div id="hover"><span id="preview" style="line-height: 150px;">Preview</span></div>
              </a>
        </div>
        <div class="col-md-10">
            <h4 id="{{id}}" style="display:inline-block;">{{title}}</h4>
            {{#new}}
              <div class="new-product">new</div>
            {{/new}}
            <div> {{region_title}} | {{date_published}} </div>
            <br>
            {{description}}

            <!--http://stackoverflow.com/questions/6114435/in-mustache-templating-is-there-an-elegant-way-of-expressing-a-comma-separated-l-->
            <div class="entry-tags">
              Keywords:
              {{#keywords}}
                <li>{{.}}</li>
              {{/keywords}}
            </div>

            <hr>
            <div class="dropdown" style="display: inline-block;">
              <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Download
              <span class="caret"></span></button>
              <ul class="dropdown-menu">
                <li><a href="{{product_pdf}}">PDF</a></li>
                <li><a href="{{product_jpg}}">JPG</a></li>
              </ul>
            </div>
            <a href="https://twitter.com/intent/tweet?text={{tweet}}&via=StateHIU&url=https://hiu.state.gov/%23{{region_id}}%2C{{id}}" class="tweet" target="_blank"><img src="../assets/img/twitter-logo-black.png" style="width: 40px;margin-left:20px"></a>
        </div>
      </div>
    {{/results}}
  <!--</ul>-->
</div>
